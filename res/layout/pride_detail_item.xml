<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/app_bg_content_margin"
        android:paddingRight="@dimen/app_bg_content_margin" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="0dip"
            android:layout_height="100dip"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:src="@drawable/img_empty" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="100dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="3.5" >

            <TextView
                android:id="@+id/tv_pride_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_validate_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(本奖品只能使用一次)" />

                <Button
                    android:id="@+id/btn_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gotoUse"
                    android:layout_marginLeft="5dip"
                    android:textColor="@android:color/white"
                    android:background="@drawable/selector_button_status"
                    android:text="使用" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="说明:"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:textColor="#5D87A8"
        android:textSize="15sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dip"
        android:textColor="#646464"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:layout_marginRight="@dimen/app_bg_content_margin"
        android:id="@+id/tv_message_desc"
        android:textSize="15sp" />

</LinearLayout>