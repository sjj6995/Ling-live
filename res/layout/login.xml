<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/login_title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:layout_marginRight="@dimen/app_bg_content_margin"
        android:layout_marginTop="30dip"
        android:background="@drawable/rect_white_gray_line"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="8dip"
            android:hint="@string/please_input_email"
            android:inputType="textEmailAddress"
            android:padding="10dip"
            android:text=""
            android:textSize="@dimen/button_text_siez" />

        <include layout="@layout/horizontal_line" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="8dip"
            android:ems="10"
            android:hint="@string/please_password"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textSize="@dimen/button_text_siez" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:layout_marginRight="@dimen/app_bg_content_margin"
        android:layout_marginTop="20dip"
        android:background="@drawable/regist_bg"
        android:onClick="gotoMain"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="登陆"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_text_siez" />
	<RelativeLayout
	    android:layout_width="fill_parent"
   		android:layout_height="fill_parent"
        android:orientation="vertical" 
	    >
	       <TextView
	        android:id="@+id/login_tip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:gravity="center_horizontal"
	        android:text=""
	        android:textColor="#FF0000"
	        android:textSize="14sp" />
	      <TextView
	          android:id="@+id/forget"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	         android:paddingBottom="35dip"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:autoLink="web"
	        android:gravity="center_horizontal"
	        android:text="忘记密码？"
	        android:clickable="true"
	        android:onClick="forgetpwd"
	        android:textColor="#FF0000"
	        android:textSize="14sp" />
	        <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:gravity="center_horizontal"
	        android:text="(邮件可能被当做广告邮件被放入垃圾箱，请注意查收)"
	        android:textColor="#FF0000"
	        android:textSize="14sp" />
	</RelativeLayout>
  

</LinearLayout>