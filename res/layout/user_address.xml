<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:layout_marginRight="@dimen/app_bg_content_margin"
        android:layout_marginTop="30dip"
        android:background="@drawable/rect_white_gray_line"
        android:orientation="vertical" >
		<LinearLayout 
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:background="@null"
	        android:orientation="horizontal" >
		    <TextView 
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:layout_weight="2"
		        android:drawablePadding="8dip"
		        android:text="收件人:"/>
		     <EditText
	            android:id="@+id/user_name"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rect_white_gray_line"
	            android:drawablePadding="8dip"
	            android:layout_weight="5"
	            android:inputType="textEmailAddress"
	            android:padding="5dip"
	            android:text=""
	            android:textSize="@dimen/button_text_siez" />
		    
		</LinearLayout>
       
        <include layout="@layout/horizontal_line" />
       	<LinearLayout 
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:background="@null"
	        android:orientation="horizontal" >
		    <TextView 
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:layout_weight="2"
		        android:drawablePadding="8dip"
		        android:text="联系电话:"/>
		     <EditText
	            android:id="@+id/user_tel"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rect_white_gray_line"
	            android:drawablePadding="8dip"
	            android:layout_weight="5"
	            android:inputType="textEmailAddress"
	            android:padding="5dip"
	            android:textSize="@dimen/button_text_siez" />
		    
		</LinearLayout>

        <include layout="@layout/horizontal_line" />
			<LinearLayout 
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:background="@null"
	        android:orientation="horizontal" >
		    <TextView 
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:layout_weight="2"
		        android:drawablePadding="8dip"
		        android:text="邮编:"/>
		     <EditText
	            android:id="@+id/user_postcode"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rect_white_gray_line"
	            android:drawablePadding="8dip"
	            android:layout_weight="5"
	            android:inputType="textEmailAddress"
	            android:padding="5dip"
	            android:text=""
	            android:textSize="@dimen/button_text_siez" />
		    
		</LinearLayout>
        <include layout="@layout/horizontal_line" />
        	<LinearLayout 
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dip"
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="@dimen/app_bg_content_margin"
	        android:layout_marginRight="@dimen/app_bg_content_margin"
	        android:background="@null"
	        android:orientation="horizontal" >
		    <TextView 
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:layout_weight="2"
		        android:drawablePadding="8dip"
		        android:text="收件地址:"/>
		     <EditText
	            android:id="@+id/user_address"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/rect_white_gray_line"
	            android:drawablePadding="8dip"
	            android:inputType="textMultiLine"
	            android:minLines="5"
	            android:padding="5dip"
	            android:gravity="top|left"
	            android:layout_weight="5"
	            android:text=""
	            android:textSize="@dimen/button_text_siez" />
		        <requestFocus />
		</LinearLayout>

           


    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/app_bg_content_margin"
        android:layout_marginRight="@dimen/app_bg_content_margin"
        android:layout_marginTop="20dip"
        android:background="@drawable/regist_bg"
        android:onClick="saveAddress"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_text_siez" />

  

</LinearLayout>